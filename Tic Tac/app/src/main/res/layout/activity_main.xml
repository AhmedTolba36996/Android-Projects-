<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="70dp"
        android:id="@+id/linera"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  You :  "
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:textSize="30dp"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/purple_200"
            android:id="@+id/yourResult"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Computer :  "
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="30dp"
            android:textColor="@color/purple_200"
            android:id="@+id/computerReuslt"
            >

        </TextView>

    </LinearLayout>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:context=".MainActivity"
        android:background="@color/gray"
        android:layout_below="@id/linera"
        android:layout_alignParentBottom="true"

        >



        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3pt">
            <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:id="@+id/bu1" android:layout_marginLeft="3pt"
                android:background="@color/white"
                android:onClick="buClick"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/bu2" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu3" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="3pt">
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu4" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu5" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu6" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
        </TableRow>



        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="3pt">
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu7" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu8" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
            <Button
                android:layout_width="40pt"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="40pt" android:id="@+id/bu9" android:layout_marginLeft="3pt"
                android:background="@color/white" android:onClick="buClick"/>
        </TableRow>


    </TableLayout>

</RelativeLayout>

