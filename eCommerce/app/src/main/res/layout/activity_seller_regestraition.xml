<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegestraitionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img_seller"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/seller"
                >

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_seller"
                android:text="Seller Registration Form "
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@id/img_seller"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/teal_700"
                >

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seller_name"
                android:hint="Name ..."
                android:layout_below="@id/title_seller"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_seller"
                android:padding="10dp"
                android:inputType="text"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seller_phone"
                android:hint="Phone.."
                android:layout_below="@id/seller_name"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_seller"
                android:padding="10dp"
                android:inputType="phone"
                >

            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seller_email"
                android:hint="E-mail...."
                android:layout_below="@id/seller_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_seller"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seller_passwprd"
                android:hint="Password...."
                android:layout_below="@id/seller_email"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_seller"
                android:padding="10dp"
                >
            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seller_address"
                android:hint="Address...."
                android:layout_below="@id/seller_passwprd"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/input_seller"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/seller_address"
                android:layout_centerHorizontal="true"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seller_address"
                    android:text="Register"
                    android:background="@color/white"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:textAllCaps="true"
                    android:id="@+id/seller_register"
                    >
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seller_address"
                    android:layout_margin="15dp"
                    android:text="Already Have Account"
                    android:background="@drawable/button_seller"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:id="@+id/already_have_account_Seller"


                    >
                </Button>


            </LinearLayout>



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>